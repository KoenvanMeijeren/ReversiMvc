@model ReversiMvc.Models.Entities.PlayerEntity

@{
    ViewData["Title"] = $"Details van speler {Model.Name}";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Naam
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Overwinningen
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Victories)
        </dd>
        <dt class = "col-sm-2">
            Verliezen
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Losses)
        </dd>
        <dt class = "col-sm-2">
            Gelijkspellen
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Draws)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Guid">Bewerken</a> |
    <a asp-action="Index">Terug naar spelers</a>
</div>
