@model EditPasswordViewModel
@{
    ViewData["Title"] = "Reset wachtwoord";
}

<h3>Reset wachtwoord</h3>

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="NewPassword" class="form-control" autocomplete="new-password" />
                <label asp-for="NewPassword" class="form-label">Nieuw wachtwoord</label>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                <label asp-for="ConfirmPassword" class="form-label">Bevestig wachtwoord</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset wachtwoord</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}