@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = $"Account {Model.UserName} verwijderen";
}

<h1>@ViewData["Title"]</h1>

<h3>Weet je zeker dat je dit account wilt verwijderen?</h3>
<div>
    <form asp-action="Delete">
        <h5 class="text-danger">Let op: bij het verwijderen van dit account wordt ook de speler verwijderd.</h5>
        
        <input type="hidden" asp-for="Id"/>

        <button type="submit" class="btn btn-danger">Verwijderen</button>

        <a asp-action="Index">Terug naar accountsoverzicht</a>
    </form>
</div>
