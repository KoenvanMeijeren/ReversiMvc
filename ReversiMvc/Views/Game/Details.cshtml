@model ReversiMvc.Models.GameEditViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Spel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Beschrijving</dt>
        <dd class = "col-sm-10">@Model.Description</dd>
        
        <dt class = "col-sm-2">Sleutel</dt>
        <dd class = "col-sm-10">@Model.Token</dd>
        
        <dt class = "col-sm-2">Speler 1</dt>
        <dd class = "col-sm-10">@Model.PlayerOne?.Name</dd>
        
        <dt class = "col-sm-2">Speler 2</dt>
        <dd class = "col-sm-10">@Model.PlayerTwo?.Name</dd>
        
        <dt class = "col-sm-2">Status</dt>
        <dd class = "col-sm-10">@Model.Status</dd>
    </dl>
    
    <div class="row">
        <div class="col-md-6">
            @if (Model.CanAddPlayerTwo())
            {
                <form asp-action="AddPlayerTwo">
                    <input type="hidden" asp-for="Token"/>
                    
                    <div class="form-group mt-3">
                        <input type="submit" value="Deelnemen" class="btn btn-primary"/>
                    </div>
                </form>
            }
            
            @if (Model.CanStart())
            {
                <form asp-action="AddPlayerTwo">
                    <input type="hidden" asp-for="Token"/>
                    
                    <div class="form-group mt-3">
                        <input type="submit" value="Start" class="btn btn-primary"/>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
